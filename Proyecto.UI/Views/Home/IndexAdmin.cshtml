@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Styles {
    <link href="~/css/styles.css" rel="stylesheet" />
}

<div class="homepage-botero">

    <!-- HERO VISUAL CON FONDO -->
    <section class="hero-botero d-flex align-items-center justify-content-center text-center">
        <div class="hero-content">
            <h1 class="titulo">BoteroBeauty</h1>
            <p class="subtitulo">Aquí podrás encontrar lo más nuevo en productos para tu cuidado personal</p>
            <a href="#explora" class="btn-hero">Explorar ahora</a>
        </div>
    </section>

    <!-- EXPLORA -->
    <section id="explora" class="seccion-explora text-center py-5">
        <div class="container">
            <h2 class="fw-bold text-purple mb-4">Explorá nuestras colecciones más amadas</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card-producto">
                        <img src="~/img/pexels-creativetunz-15501978.jpg" class="img-fluid rounded" alt="Vegano" />
                        <h5 class="mt-3">Vegano y consciente</h5>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-producto">
                        <img src="~/img/pexels-misolo-cosmetic-2588316-6767774.jpg" class="img-fluid rounded" alt="MiSolo" />
                        <h5 class="mt-3">Misolo Cosmetics</h5>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-producto">
                        <img src="~/img/pexels-misolo-cosmetic-2588316-11179692.jpg" class="img-fluid rounded" alt="Edición Limitada" />
                        <h5 class="mt-3">Misolo Cosmetics</h5>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- DESTACADOS -->
    <section class="seccion-destacados text-center py-5">
        <div class="container">
            <h2 class="fw-bold text-purple mb-5">Descubrí lo que hace única a Botero Beauty</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card-info">
                        <img src="~/img/pexels-1520598743-27240005.jpg" class="img-fluid rounded" alt="Ingredientes premium">
                        <h4>Ingredientes Premium</h4>
                        <p>Seleccionamos cuidadosamente los mejores ingredientes para cuidar tu piel como se merece.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-info">
                        <img src="~/img/pexels-cottonbro-9748712.jpg" class="img-fluid rounded" alt="Belleza consciente">
                        <h4>Belleza Consciente</h4>
                        <p>Creemos en un mundo más justo. Nuestros productos son cruelty-free y sostenibles.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-info">
                        <img src="~/img/pexels-noratopicals-7038192.jpg" class="img-fluid rounded" alt="Inspiración natural">
                        <h4>Inspiración Natural</h4>
                        <p>Desde el poder de la naturaleza nace nuestra inspiración para innovar en cosmética limpia.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CUIDADOS -->
    <section class="seccion-cuidados text-center py-5">
        <div class="container">
            <h2 class="fw-bold text-purple mb-5">Tu belleza, nuestro compromiso</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card-info">
                        <img src="~/img/pexels-shkrabaanthony-5205672.jpg" class="img-fluid rounded" alt="Cuidado Personal">
                        <h4>Cuidado Personal</h4>
                        <p>Productos pensados para acompañarte todos los días en tu rutina de bienestar y amor propio.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-info">
                        <img src="~/img/pexels-moose-photos-170195-1029896.jpg" class="img-fluid rounded" alt="Cuidado Facial">
                        <h4>Cuidado Facial</h4>
                        <p>Tratamientos formulados para mantener tu rostro hidratado, fresco y naturalmente radiante.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-info">
                        <img src="~/img/pexels-thefullonmonet-28994392.jpg" class="img-fluid rounded" alt="Cuidado Capilar">
                        <h4>Cuidado Capilar</h4>
                        <p>Devuelve la vitalidad a tu cabello con ingredientes nutritivos y fórmulas libres de agresivos.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>