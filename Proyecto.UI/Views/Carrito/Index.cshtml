@using Proyecto.UI.Models
@model Proyecto.UI.Models.CarritoView

@{
    ViewData["Title"] = "Tu carrito";
    var total = Model?.Total ?? 0m;
}

<div class="container mt-4">
    <h2 class="mb-3">Tu carrito</h2>

    @* Mensajes opcionales del Checkout *@
    @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }
    @if (TempData["Pedido"] is string pedido && !string.IsNullOrWhiteSpace(pedido))
    {
        <div class="alert alert-success">Pedido creado: <strong>@pedido</strong></div>
    }

    @if (Model?.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-info">Aún no tienes productos. ¡Agrega algunos! 😊</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th style="width:140px">Cantidad</th>
                        <th>Precio</th>
                        <th>Subtotal</th>
                        <th style="width:60px"></th>
                    </tr>
                </thead>
                <tbody id="cart-body">
                    @foreach (var it in Model.Items)
                    {
                        <!-- Fallback: usa IdDetalle si existe; si no, usa ProductoId -->
                        <tr data-id="@(it.IdDetalle ?? it.ProductoId)">
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if (!string.IsNullOrEmpty(it.ImagenUrl))
                                    {
                                        <img src="@it.ImagenUrl" alt="@it.Nombre" style="width:48px;height:48px;object-fit:cover;border-radius:8px" />
                                    }
                                    <div>
                                        <div class="fw-semibold">@it.Nombre</div>
                                        <div class="text-muted small">
                                            @if (it.IdDetalle.HasValue)
                                            {
                                                <span>ID Detalle: @it.IdDetalle</span>
                                                <span class="mx-1">·</span>
                                            }
                                            <span>ID Prod: @it.ProductoId</span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="input-group">
                                    <button class="btn btn-outline-secondary btn-sm btn-minus" type="button">-</button>
                                    <input class="form-control form-control-sm text-center qty" value="@it.Cantidad" />
                                    <button class="btn btn-outline-secondary btn-sm btn-plus" type="button">+</button>
                                </div>
                            </td>
                            <td>₡@it.Precio.ToString("N2")</td>
                            <td class="subtotal">₡@it.Subtotal.ToString("N2")</td>
                            <td>
                                <button class="btn btn-outline-danger btn-sm btn-remove" title="Quitar">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-end mt-3">
            <a asp-action="Resumen" class="btn btn-primary">Continuar a pago</a>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <button id="btn-clear" class="btn btn-outline-secondary">Vaciar carrito</button>
            <div class="fs-5">Total: <strong id="cart-total">₡@total.ToString("N2")</strong></div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/carrito.js" asp-append-version="true"></script>
}




