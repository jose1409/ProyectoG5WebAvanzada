@using Proyecto.UI.Models
@model Proyecto.UI.Models.CarritoView

@{
    ViewData["Title"] = "Resumen de compra";
    var total = Model?.Total ?? 0m;
}

<div class="container mt-4">
    <h2 class="mb-3">Resumen de tu compra</h2>

    @if (Model?.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-info">Tu carrito está vacío.</div>
        <a asp-action="Index" class="btn btn-outline-secondary mt-2">Volver al carrito</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th class="text-center" style="width:120px">Cantidad</th>
                        <th class="text-end" style="width:140px">Precio</th>
                        <th class="text-end" style="width:160px">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var it in Model.Items)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if (!string.IsNullOrEmpty(it.ImagenUrl))
                                    {
                                        <img src="@it.ImagenUrl" alt="@it.Nombre" style="width:48px;height:48px;object-fit:cover;border-radius:8px" />
                                    }
                                    <div>
                                        <div class="fw-semibold">@it.Nombre</div>
                                        <div class="text-muted small">ID Prod: @it.ProductoId</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">@it.Cantidad</td>
                            <td class="text-end">₡@it.Precio.ToString("N2")</td>
                            <td class="text-end">₡@it.Subtotal.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total</th>
                        <th class="text-end">₡@total.ToString("N2")</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Volver al carrito</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Seguir comprando</a>
        </div>
    }
</div>

