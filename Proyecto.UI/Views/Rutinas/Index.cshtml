@model List<Proyecto.UI.Models.Rutina>
@{
    Layout = "_Layout";
}

<div class="container py-5">
    <h2 class="text-center mb-5" style="font-size: 2rem; font-weight: bold;">
        âœ¨ Rutinas Recomendadas
    </h2>

    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
    {
        <div class="alert alert-danger text-center">@ViewBag.Mensaje</div>
    }

    <div class="row">
        @foreach (var rutina in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <img src="@rutina.Imagen" class="card-img-top" alt="@rutina.Nombre" style="object-fit: cover; height: 220px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@rutina.Nombre</h5>
                        <p class="card-text text-muted">@rutina.Descripcion</p>
                        <a href="@Url.Action("Details", "Rutinas", new { id = rutina.IdRutina })" class="btn text-white mt-auto"
                        style="background-color: #993bb9; border-color: #993bb9;"
                        onmouseover="this.style.backgroundColor='#7f2b9b';"
                        onmouseout="this.style.backgroundColor='#993bb9';">
                            Ver productos
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>