@model Autenticacion
@{
    Layout = "_LayoutExterno";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(/img/login-register.jpg) no-repeat center center;">
    <div class="auth-box on-sidebar">
        <div id="recoveraccessform">
            <div class="logo">
                @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                {
                    <div class="alert alert-@ViewBag.TipoMensaje text-center" role="alert">
                        @ViewBag.Mensaje
                    </div>
                }
                <span class="db">
                    <img src="https://www.boterobeauty.com/cdn/shop/files/logo2.png?v=1718741803&width=150" alt="logo" />
                </span>
                <h5 class="font-medium m-b-20">Recuperar Acceso</h5>
                <p class="text-muted">Ingresa tu correo electrónico y te enviaremos una nueva contraseña.</p>
            </div>

            <div class="row">
                <div class="col-12">
                    <form class="form-horizontal m-t-20" asp-controller="Autenticacion" asp-action="RecoverAccess" method="post">
                        <input id="txtMensaje" type="hidden" value="@ViewBag.Mensaje" />

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ti-email"></i></span>
                            </div>
                            <input asp-for="CorreoElectronico" class="form-control form-control-lg" placeholder="Correo electrónico" />
                        </div>

                        <div class="form-group text-center">
                            <div class="col-xs-12 p-b-20">
                                <button class="btn btn-block btn-lg btn-info" type="submit">Recuperar contraseña</button>
                            </div>
                        </div>

                        <div class="form-group m-b-0 m-t-10">
                            <div class="col-sm-12 text-center">
                                <a href="@Url.Action("Index", "Autenticacion")" class="text-info m-l-5"><b>Volver al inicio de sesión</del></del></b></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery.min.js"></script>
<script src="~/js/index.js"></script>