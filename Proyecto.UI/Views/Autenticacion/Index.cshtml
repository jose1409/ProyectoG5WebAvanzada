@model Autenticacion
@{
    Layout = "_LayoutExterno"; // Usa el layout externo limpio
}

<div class="auth-wrapper">
    <div class="auth-box">
        <div id="loginform">
            <div class="logo">
                <span class="db">
                    <img src="https://www.boterobeauty.com/cdn/shop/files/logo2.png?v=1718741803&width=160" alt="logo" />
                </span>
                <h5 class="font-medium">Iniciar Sesión</h5>
            </div>


                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            <input asp-for="CorreoElectronico" class="form-control form-control-lg" placeholder="Correo Electronico" aria-label="Correo Electronico" />
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon2"><i class="ti-pencil"></i></span>
                            </div>
                            <input asp-for="Contrasenna" type="password" class="form-control form-control-lg" placeholder="Contraseña" aria-label="Contraseña" />
                        </div>
                        <div class="form-group text-center">
                            <div class="col-xs-12 p-b-20">
                                <button class="btn btn-block btn-lg btn-info" type="submit">Iniciar Sesión</button>
                            </div>
                        </div>
                        <div class="form-group m-b-0 m-t-10">
                            <div class="col-sm-12 text-center">
                                No tienes una cuenta? <a href="@Url.Action("Registro","Autenticacion")" class="text-info m-l-5"><b>Registrate</b></a>
                            </div>
                            <div class="col-sm-12 text-center">
                                Olvidaste tu contraseña? <a href="#" class="text-info m-l-5"><b>Recupera el acceso</b></a>
                            </div>
                        </div>
                    </form>

            <!-- Formulario -->
            <form id="loginform" asp-controller="Autenticacion" asp-action="Index" method="post">
                <input id="txtMensaje" type="hidden" value="@ViewBag.Mensaje" />

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    </div>
                    <input asp-for="CorreoElectronico" class="form-control form-control-lg" placeholder="Correo electrónico" />

                </div>

                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input asp-for="Contrasenna" type="password" class="form-control form-control-lg" placeholder="Contraseña" />
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-login btn-block" type="submit">Iniciar Sesión</button>
                </div>

                <div class="form-group text-center mt-3">
                    <p>¿No tienes una cuenta? <a href="@Url.Action("Registro", "Autenticacion")"><b>Regístrate</b></a></p>
                    <p>¿Olvidaste tu contraseña? <a href="#"><b>Recuperar acceso</b></a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
}
